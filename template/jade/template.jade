include ../../global/jade/variables.jade
include ../../global/jade/mixins.jade
include ../jade/variables.jade
include ../jade/mixins.jade

block page-variables

doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml")
  include ../../global/jade/head.jade
  body
    table(bgcolor="")
      tr
        td
          table.compartment(align="center")
            tr
              td
                block header
                  p Stamp Header
            tr
              td
                block hero
                  a(
                    href="#{pageLink}",
                    target="_blank"
                  )
                    img.full(
                      alt="Hero"
                      src="../../images/hero.jpg"
                    )
            tr
              td
                block headline
                  h1 Stamp Headline
                block content
                  p Stamp Content
            tr
              td
                table
                  tr
                    th.full-small.column 
                      h2 Column 1
                    th.full-small.column 
                      h2 Column 2
            tr
              td
                block footer
                  p Stamp Footer
